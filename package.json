{
  "name": "eslint-plugin-lit",
  "version": "0.0.0-dev",
  "type": "module",
  "description": "lit-html support for ESLint",
  "main": "lib/index.js",
  "files": [
    "lib/",
    "!lib/test",
    "docs",
    "custom_types"
  ],
  "scripts": {
    "clean": "premove ./lib ./coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "prebuild": "npm run clean",
    "build": "tsc",
    "dev": "npm run lint && npm run build && npm run test",
    "test": "c8 --reporter=lcov --reporter=text-summary mocha \"lib/test/**/*_test.js\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/43081j/eslint-plugin-lit.git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "lit-html",
    "lit-element"
  ],
  "author": "James Garbutt <https://github.com/43081j>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/43081j/eslint-plugin-lit/issues"
  },
  "homepage": "https://github.com/43081j/eslint-plugin-lit#readme",
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "parse5": "^8.0.0",
    "parse5-htmlparser2-tree-adapter": "^8.0.0"
  },
  "peerDependencies": {
    "eslint": ">= 8"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.6",
    "@babel/plugin-proposal-decorators": "^7.29.0",
    "@types/chai": "^4.2.16",
    "@types/eslint": "^8.4.6",
    "@types/estree": "^1.0.8",
    "@types/mocha": "^10.0.0",
    "@types/node": "^25.3.3",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "c8": "^11.0.0",
    "chai": "^6.2.2",
    "eslint": "^8.23.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-eslint-plugin": "^7.3.1",
    "espree": "^11.1.1",
    "mocha": "^11.7.5",
    "premove": "^4.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
